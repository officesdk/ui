{
  "name": "@officesdk/ui",
  "version": "0.1.0",
  "description": "OfficeSdk SDK UI Component Library",
  "license": "MIT",
  "author": "OfficeSdk Team",
  "homepage": "https://github.com/officesdk/ui#readme",
  "bugs": {
    "url": "https://github.com/officesdk/ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/officesdk/ui.git"
  },
  "main": "./packages/components/dist/index.js",
  "module": "./packages/components/dist/index.mjs",
  "types": "./packages/components/dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./packages/components/dist/index.d.ts",
      "import": "./packages/components/dist/index.mjs",
      "require": "./packages/components/dist/index.js"
    },
    "./theme": {
      "types": "./packages/theme/dist/index.d.ts",
      "import": "./packages/theme/dist/index.mjs",
      "require": "./packages/theme/dist/index.js"
    },
    "./utils": {
      "types": "./packages/utils/dist/index.d.ts",
      "import": "./packages/utils/dist/index.mjs",
      "require": "./packages/utils/dist/index.js"
    },
    "./icons": {
      "types": "./packages/icons/dist/index.d.ts",
      "import": "./packages/icons/dist/index.mjs",
      "require": "./packages/icons/dist/index.js"
    }
  },
  "files": [
    "packages/components/dist",
    "packages/theme/dist",
    "packages/utils/dist",
    "packages/icons/dist",
    "packages/*/package.json",
    "packages/*/README.md",
    "LICENSE"
  ],
  "workspaces": [
    "packages/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "styled-components": "^5.3.0"
  },
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "yarn workspaces foreach -A run build",
    "build:storybook": "storybook build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "clean": "yarn workspaces foreach -A run clean && rm -rf node_modules",
    "prepublishOnly": "yarn build"
  },
  "devDependencies": {
    "@storybook/addon-docs": "^7.6.7",
    "@storybook/addon-essentials": "^7.6.7",
    "@storybook/addon-interactions": "^7.6.7",
    "@storybook/addon-links": "^7.6.7",
    "@storybook/blocks": "^7.6.7",
    "@storybook/react": "^7.6.7",
    "@storybook/react-dom-shim": "^7.6.7",
    "@storybook/react-vite": "^7.6.7",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^27",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^27.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "scheduler": "^0.23.0",
    "storybook": "^7.6.7",
    "styled-components": "^5.3.11",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^4.0.16"
  },
  "packageManager": "yarn@4.9.1",
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=4.0.0"
  },
  "dependencies": {
    "@officesdk/editor-sdk-core": "0.0.0-alpha.2",
    "rc-tooltip": "^6.0.0"
  }
}
