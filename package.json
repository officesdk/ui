{
  "name": "officesdk-design-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "OfficeSdk SDK Design System - Monorepo",
  "license": "MIT",
  "author": "OfficeSdk Team",
  "homepage": "https://github.com/officesdk/officesdk-design#readme",
  "bugs": {
    "url": "https://github.com/officesdk/officesdk-design/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/officesdk/officesdk-design.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "yarn workspaces foreach -At run build && cd packages/design && yarn build",
    "build:storybook": "storybook build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md,mdx}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md,mdx}\"",
    "type-check": "tsc --noEmit",
    "validate": "yarn lint && yarn type-check && yarn test --run",
    "validate:structure": "node scripts/validate-structure.js",
    "changeset": "changeset",
    "changeset:version": "changeset version && yarn install --mode update-lockfile",
    "changeset:publish": "yarn build && changeset publish",
    "release": "yarn changeset:version && yarn changeset:publish",
    "prepare": "husky",
    "clean": "yarn workspaces foreach -A run clean && rm -rf node_modules",
    "prepublishOnly": "yarn build"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@storybook/addon-docs": "^7.6.7",
    "@storybook/addon-essentials": "^7.6.7",
    "@storybook/addon-interactions": "^7.6.7",
    "@storybook/addon-links": "^7.6.7",
    "@storybook/blocks": "^7.6.7",
    "@storybook/react": "^7.6.7",
    "@storybook/react-dom-shim": "^7.6.7",
    "@storybook/react-vite": "^7.6.7",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^27",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "rc-dialog": "^10.0.0",
    "rc-dropdown": "^4.2.1",
    "rc-menu": "^9.16.1",
    "rc-virtual-list": "^3.19.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "scheduler": "^0.23.0",
    "storybook": "^7.6.7",
    "styled-components": "^5.3.11",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^4.0.16"
  },
  "packageManager": "yarn@4.9.1",
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=4.0.0"
  },
  "dependencies": {
    "@officesdk/editor-sdk-core": "^0.0.0-alpha.12"
  }
}
